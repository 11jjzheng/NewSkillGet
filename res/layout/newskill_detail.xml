<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_newskill_detail_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:gravity="center"
        android:padding="7dip" >

        <TextView
            android:id="@+id/tv_newskill_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="新技能"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_text_size" />

        <ImageView
            android:id="@+id/iv_newskill_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/share" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_newskill_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@id/rl_newskill_detail_bar">

        <LinearLayout
            android:id="@+id/ll_newskill_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/main_blue"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_newskill_detail_learn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="我要学"/>
        <TextView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <ImageView 
            android:id="@+id/iv_newskill_detail_support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/support"/>
        <TextView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView 
            android:id="@+id/tv_newskill_detail_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="评论"/>
    </LinearLayout>

</RelativeLayout>