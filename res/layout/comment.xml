<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_comment_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:gravity="center_vertical"
        android:padding="7dip" >

        <TextView
            android:id="@+id/tv_comment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_text_size" />

        <TextView
            android:id="@+id/tv_comment_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="评论"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_comment_description"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@id/rl_comment_bar"
        android:layout_marginLeft="@dimen/left_right_space"
        android:layout_marginRight="@dimen/left_right_space"
        android:layout_marginTop="@dimen/newskill_publish_between"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_comment_publish_description"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/edittext_bg"
            android:gravity="left"
            android:hint="请输入你的评论..."
            android:padding="5dp" />
    </LinearLayout>

</RelativeLayout>