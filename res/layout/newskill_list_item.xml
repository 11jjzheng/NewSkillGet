<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/share_list_item_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_share_list_item_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="优雅使用谷歌方法"
            android:textSize="@dimen/share_list_item_title" />
        
        <TextView
            android:id="@+id/tv_share_list_item_shid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/tv_share_list_item_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/share_list_item_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_share_list_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_list_item_content"
            android:lines="2"
            android:ellipsize="middle"
            android:textSize="@dimen/share_list_item_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/share_list_item_margin" >

        <TextView
            android:id="@+id/tv_share_list_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="ifanr"
            android:layout_margin="@dimen/share_list_item_margin" 
            android:textSize="@dimen/share_list_item_info" />
        
        <TextView 
            android:id="@+id/tv_share_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_share_list_item_username"
            android:layout_margin="@dimen/share_list_item_margin"
            android:textSize="@dimen/share_list_item_info"/>

        <TextView
            android:id="@+id/tv_share_list_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:layout_margin="@dimen/share_list_item_margin" 
            android:textSize="@dimen/share_list_item_info" />

        <ImageView
            android:id="@+id/iv_share_list_item_com_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            android:layout_toLeftOf="@+id/tv_share_list_item_comment" />

        <TextView
            android:id="@+id/tv_share_list_item_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_share_list_item_com_img"
            android:layout_margin="@dimen/share_list_item_margin" 
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="@dimen/share_list_item_info" />

        <ImageView
            android:id="@+id/iv_share_list_item_support_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support_s"
            android:layout_toLeftOf="@+id/tv_share_list_item_support" />
    </RelativeLayout>

</LinearLayout>