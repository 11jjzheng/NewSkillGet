<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_personal_comment_cnt"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@color/main_blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp" />      
            
       <TextView
            android:id="@+id/tv_personal_shid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
       
       <TextView
            android:id="@+id/tv_personal_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/tv_personal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/tv_personal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_personal_my_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="如何优雅地使用Google?"
            android:textColor="@color/black"
            android:textSize="@dimen/personal_my_list_item" />        

    </LinearLayout>

</LinearLayout>