<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_my_learn_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="优雅地使用Google的方法"
                android:textColor="@color/black"
                android:textSize="@dimen/personal_my_learn_title" />
            
            
        	<TextView
	            android:id="@+id/tv_my_learn_stepnow"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:textSize="12sp"
				android:textColor="@color/gray"
				android:layout_marginLeft="10dp"
				android:layout_below="@id/tv_my_learn_title"/>

            <Button
                android:id="@+id/b_learnstepup"
                android:layout_width="40dp"
                android:layout_height="30dp"
				android:layout_alignParentRight="true"
				android:layout_alignBottom="@id/tv_my_learn_stepnow"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="5dp"
                android:background="@color/main_blue"
                android:text="StepUp"
                android:textColor="@color/white"
                android:textSize="12sp" />
"
        </RelativeLayout>
"

        <TextView
            android:id="@+id/tv_my_learn_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_space"
            android:layout_marginRight="@dimen/left_right_space"
            android:text="@string/newskill_test"
            android:textColor="@color/black"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>